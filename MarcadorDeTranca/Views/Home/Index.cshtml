@model Partida

@{
    ViewData["Title"] = "Partida de Tranca";
}

<h1>Partida de Tranca</h1>

<h2>Jogadores</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Pontuação</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Jogadores != null && Model.Jogadores.Any())
        {
            foreach (var jogador in Model.Jogadores)
            {
                <tr>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Pontos</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Nenhum jogador cadastrado ainda.</td>
            </tr>
        }
    </tbody>
</table>

<h2>Adicionar Jogador</h2>
<form asp-action="AdicionarJogador" method="post">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome do Jogador</label>
        <input type="text" id="nome" name="nome" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

<h2>Registrar Pontuação</h2>
<form asp-action="RegistrarPontuacao" method="post">
    <div class="mb-3">
        <label for="rodada" class="form-label">Número da Rodada</label>
        <input type="number" id="rodada" name="rodada" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="nomeJogador" class="form-label">Nome do Jogador</label>
        <select id="nomeJogador" name="nomeJogador" class="form-select" required>
            @foreach (var jogador in Model.Jogadores)
            {
                <option value="@jogador.Nome">@jogador.Nome</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="pontosCanastras" class="form-label">Pontos de Canastras</label>
        <input type="number" id="pontosCanastras" name="pontosCanastras" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="pontosCartas" class="form-label">Pontos de Cartas</label>
        <input type="number" id="pontosCartas" name="pontosCartas" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Registrar Pontuação</button>
</form>
